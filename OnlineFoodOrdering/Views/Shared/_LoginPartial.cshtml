@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


@if (SignInManager.IsSignedIn(User))
{
    <li class="login-register-wrap d-none d-xl-flex" style="margin-left:20px;">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit"><i class="fa fa-sign-out"></i> @localizer["Logout"]</button>
        </form>
    </li>

}
else
{
    <li class="login-register-wrap d-none d-xl-flex">
        <span><a asp-area="Identity" asp-page="/Account/Login">@localizer["Login"]</a></span>
        <span><a asp-area="Identity" asp-page="/Account/Register">@localizer["Register"]</a></span>
    </li>
}
