@model OnlineFoodOrdering.Models.Order
@using OnlineFoodOrdering.Utility
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
<div class="container padding-bottom-3x mb-1">
    <div class="card mb-3">
        <div class="p-4 text-center text-white text-lg bg-dark rounded-top"><span class="text-uppercase">@localizer["Tracking Order No"] - </span><span class="text-medium">@Model.Id</span></div>
        <div class="d-flex flex-wrap flex-sm-nowrap justify-content-between py-3 px-2 bg-secondary">
            <div class="w-100 text-center py-1 px-2"><span class="text-medium">Shipped Via:</span> UPS Ground</div>
            <div class="w-100 text-center py-1 px-2"><span class="text-medium">Status:</span> @Model.Status</div>
            <div class="w-100 text-center py-1 px-2"><span class="text-medium">Expected Date:</span> @Model.OrderDate.ToShortDateString()</div>
        </div>
        <div class="card-body">
            <div class="steps d-flex flex-wrap flex-sm-nowrap justify-content-between padding-top-2x padding-bottom-1x">
                @if (Model.Status == SD.StatusSubmitted)
                {
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-note2"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Order Placed"]</h4>
                    </div>
                    <div class="step ">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-coffee"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["In the kitchen"]</h4>
                    </div>
                    <div class="step ">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-map-marker"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Ready for pick-up"]</h4>
                    </div>
                    <div class="step">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-check"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Completed"]</h4>
                    </div>
                }
                else if (Model.Status == SD.StatusInProcess)
                {
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-note2"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Order Placed"]</h4>
                    </div>
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-coffee"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["In the kitchen"]</h4>
                    </div>
                    <div class="step ">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-map-marker"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Ready for pick-up"]</h4>
                    </div>
                    <div class="step">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-check"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Completed"]</h4>
                    </div>
                }
                else if (Model.Status == SD.StatusReady)
                {
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-note2"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Order Placed"]</h4>
                    </div>
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-coffee"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["In the kitchen"]</h4>
                    </div>
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-map-marker"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Ready for pick-up"]</h4>
                    </div>
                    <div class="step">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-check"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Completed"]</h4>
                    </div>
                }
                else if (Model.Status == SD.StatusCompleted)
                {
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-note2"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Order Placed"]</h4>
                    </div>
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-coffee"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["In the kitchen"]</h4>
                    </div>
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-map-marker"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Ready for pick-up"]</h4>
                    </div>
                    <div class="step completed">
                        <div class="step-icon-wrap">
                            <div class="step-icon"><i class="pe-7s-check"></i></div>
                        </div>
                        <h4 class="step-title">@localizer["Completed"]</h4>
                    </div>
                }

            </div>
        </div>
    </div>

</div>
