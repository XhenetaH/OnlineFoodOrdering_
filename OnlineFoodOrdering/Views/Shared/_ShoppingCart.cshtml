@if (ViewBag.Cart != null)
{
    <div class="cart-item-wrapper dropdown-sidemenu dropdown-hover-2">
        @{ 
            double sum = 0;
        }
        @foreach (var item in ViewBag.Cart)
        {
            <div class="single-cart-item">
                <div class="cart-img">
                    <a href="cart.html"><img src="@item.MenuItem.Image" alt=""></a>
                </div>
                <div class="cart-text">
                    <h5 class="title"><a href="cart.html">@item.MenuItem.Name</a></h5>
                    <div class="cart-text-btn">
                        <div class="cart-qty">
                            <span>@item.Count×</span>
                            <span class="cart-price">@item.MenuItem.Price €</span>
                        </div>
                        @using (Html.BeginForm("Remove", "Cart", new { cartId = item.Id }, FormMethod.Post))
                        {
                            <button type="submit"><i class="ion-trash-b"></i></button>

                        }
                    </div>
                </div>
            </div>
            sum = sum + (item.MenuItem.Price*item.Count);
        }
        <div class="cart-price-total d-flex justify-content-between">
            <h5>Total :</h5>
            <h5>@sum € </h5>
        </div>
        <div class="cart-links d-flex justify-content-center">
            <a class="obrien-button white-btn" asp-area="Customer" asp-controller="Cart" asp-action="Index">View cart</a>
            <a class="obrien-button white-btn" asp-area="Customer" asp-controller="Cart" asp-action="Summary">Checkout</a>
        </div>
    </div>
}
