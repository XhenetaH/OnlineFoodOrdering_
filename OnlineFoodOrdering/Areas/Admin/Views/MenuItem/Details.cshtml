@model OnlineFoodOrdering.Models.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="col-8">

                <div class="form-group">
                    <label asp-for="MenuItem.Name" class="control-label"></label>
                    <input asp-for="MenuItem.Name" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MenuItem.Description" class="control-label"></label>
                    @Html.TextAreaFor(m => m.MenuItem.Description, new { @readonly = true })
                </div>
                <div class="form-group">
                    <label asp-for="MenuItem.Price" class="control-label"></label>
                    <input asp-for="MenuItem.Price" readonly class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MenuItem.CategoryId" class="control-label"></label>
                    <input asp-for="MenuItem.Category.Name" readonly class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="MenuItem.SubCategoryId" class="control-label"></label>
                    <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />

                </div>

                <div class="form-group">
                    <label asp-for="MenuItem.Spicyness" class="control-label"></label>
                    <input asp-for="MenuItem.Spicyness" readonly class="form-control" />

                </div>
            </div>

            
        </form>
    </div>

    <br />
    <br />

    <div class="col-3 offset-1">
        <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
    </div>

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MenuItem.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
