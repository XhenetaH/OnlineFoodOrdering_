@section Scripts
{
    <script>
        var PostBackURL = '/Admin/Category/Edit';
        var DetailsURL = '/Admin/Category/Details';
        var DeleteURL = '/Admin/Category/Delete';
        var CreateURL = '/Admin/Category/Create';
        $(function () {
            $(".anchorDetail").click(function () {
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                $.ajax({
                    type: "GET",
                    url: PostBackURL,
                    contentType: "text/html; charset=utf-8",
                    data: { "Id": id },
                    cache: false,
                    dataType: "html",
                    success: function (data) {
                        $('#myModalContent').html(data);
                        $('#myModal').modal('show');
                    },
                    error: function () {
                        alert("Dynamic content load failed");
                    }
                })
            });
        });

        $(function () {
            $(".anchorDetail1").click(function () {
