@model OnlineFoodOrdering.Models.Category
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="myaccount-content">

    <h3>@localizer["Are you"]</h3>

    <br />
    <div class="account-details-form">
        <form method="post">

            <div class="row">

                <br />
                <div class="single-input-item mb-3">
                    <label for="first-name" class="required mb-1">@localizer["Name"]</label>
                    <input disabled asp-for="Name" />
                </div>
            </div>
            <br />

            <div class="single-input-item single-item-button">
                <button type="submit" asp-route-id="@Model.Id" class="btn obrien-button primary-btn">@localizer["Delete"]</button>
            </div>

        </form>
    </div>
</div>
