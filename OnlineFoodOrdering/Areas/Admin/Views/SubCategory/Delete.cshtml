@model OnlineFoodOrdering.Models.ViewModels.SubCategoryAndCategoryViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="SubCategory">@localizer["SubCategory Table"]</a></li>
                    <li class="breadcrumb-item active">@localizer["Delete SubCategory"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">@localizer["Are you sure you want to delete this?"]</h3>
                    </div>

                    <form asp-action="Delete">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="SubCategory.CategoryId">@localizer["Category Name"]</label>
                                <input id="ddlCategoryList" asp-for="SubCategory.Category.Name" disabled class="form-control" />

                            </div>
                            <div class="form-group">
                                <label>@localizer["SubCategory Name"]</label>
                                <input asp-for="SubCategory.Name" disabled class="form-control">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" asp-route-id="@Model.SubCategory.Id" class="btn btn-danger">@localizer["Delete"]</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>




