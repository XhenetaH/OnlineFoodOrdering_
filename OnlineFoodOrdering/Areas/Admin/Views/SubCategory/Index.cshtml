
@model IEnumerable<OnlineFoodOrdering.Models.SubCategory>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@localizer["Home"]</a></li>
                    <li class="breadcrumb-item active">@localizer["SubCategory Table"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        @*<h3 class="card-title">DataTable with default features</h3>*@
                        <a asp-action="Create" asp-controller="SubCategory" class="btn btn-success btn-sm"><i class="fas fa-plus"></i>&nbsp;&nbsp;@localizer["Create New"]</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        @if (Model.Count() > 0)
                        {
                        <table id="example1" class="table table-bordered table-striped">

                            <thead>
                                <tr>
                                    <th>@localizer["Name"]</th>
                                    <th>@localizer["Category Name"]</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                    {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Category.Name</td>
                                    <td style="text-align:center;">
                                        <a asp-action="Edit" asp-controller="SubCategory" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-controller="SubCategory" asp-route-id="@item.Id" class="btn btn-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-controller="SubCategory" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>

                                    </td>
                                </tr>
                                    }



                            </tbody>

                        </table>

                        }

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

</section>

@section Scripts
{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        });
    </script>
}