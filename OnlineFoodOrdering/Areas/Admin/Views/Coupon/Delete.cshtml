@model OnlineFoodOrdering.Models.Coupon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<div class="border backgroundWhite">
    <br />
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-control-file">
            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Picture))" style="border-radius:5px; border:1px solid #bbb9b9; max-width:800px; max-height:100px;" />
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" disabled asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" disabled class="form-control" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmount" disabled class="form-control" />
            </div>
            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" disabled class="form-check-input" asp-for="IsActive">
            <label class="form-check-label" asp-for="IsActive">Is this coupon active?</label>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </form>
    <br />
</div>


<br />
<br />
<br />
<br />


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

