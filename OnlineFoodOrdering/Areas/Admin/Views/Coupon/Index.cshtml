@model IEnumerable<OnlineFoodOrdering.Models.Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-12 text-right">
                <a asp-action="Create" class="site-btn"><i class="fa fa-plus"></i>  Create New</a>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border" style="background-color:#fff">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(model => model.Name).ToUpper()
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Discount).ToUpper()
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MinimumAmount).ToUpper()
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive).ToUpper()
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MinimumAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Coupon Exist!</p>
            }
        </div>

    </div>

</div>

<br />
<br />
