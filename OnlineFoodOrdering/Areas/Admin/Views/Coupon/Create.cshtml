@model OnlineFoodOrdering.Models.Coupon
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Coupon">@localizer["Coupon Table"]</a></li>
                    <li class="breadcrumb-item active">@localizer["Create Coupon"]</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">@localizer["Create Coupon"]</h3>
                    </div>
                    <form method="post">
                        <br />
                        <div class="card-body">
                            <div class="form-group">
                                <label>@localizer["Coupon Name"]</label>
                                <input asp-for="Name" class="form-control" placeholder="@localizer["Enter Name"]">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>@localizer["Coupon Type"]</label>
                                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"><option>@localizer["Choose Coupon Type"]</option></select>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">@localizer["Discount"]</label>                                
                                <input asp-for="Discount" class="form-control" placeholder="@localizer["Enter Discount"]">
                                <span asp-validation-for="Discount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">@localizer["Minimum Amount"]</label>
                                <input asp-for="MinimumAmount" class="form-control" id="exampleInputEmail1" placeholder="@localizer["Enter Minimum Amount"]">
                                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
                            </div>
                            <div class="icheck-success d-inline">
                                <input type="checkbox" id="checkboxSuccess1" asp-for="IsActive">

                                <label for="checkboxSuccess1">
                                    @localizer["Is Active"]
                                </label>
                            </div>
                            <br />
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">@localizer["Create New"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


