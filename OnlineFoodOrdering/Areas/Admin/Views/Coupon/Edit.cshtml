@model OnlineFoodOrdering.Models.Coupon
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Coupon">@localizer["Coupon Table"]</a></li>
                    <li class="breadcrumb-item active">@localizer["Update Coupon"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">@localizer["Update Coupon"]</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">
                        <br />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">@localizer["Name"]</label>
                                <input asp-for="Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">@localizer["Coupon Type"]</label>
                                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">@localizer["Discount"]</label>
                                <input asp-for="Discount" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">@localizer["Minimum Amount"]</label>
                                <input asp-for="MinimumAmount" class="form-control">
                            </div>
                            <div class="icheck-success d-inline">
                                <input type="checkbox" id="checkboxSuccess1" asp-for="IsActive">
                                <label for="checkboxSuccess1">
                                    @localizer["Is Active"]
                                </label>
                            </div>
                            <br />
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" asp-route-id="@Model.Id" class="btn btn-primary">@localizer["Update"]</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
